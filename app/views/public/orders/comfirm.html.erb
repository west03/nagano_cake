<div>
  <h2>注文情報確認</h2>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 80,50 %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount</td>
        <td><%= cart_item.subtotal %></td>
        <% @sum += cart_item.subtotal %>
      </tr>
      <% end %>
    </tbody>
  </table>