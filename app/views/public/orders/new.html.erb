<dvi>
  <h2>注文情報入力</h2>
  <% if @order.errors.any? %>
    <%= @order.errors.count %>件のエラーが発生しました
    <% @order.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  <% end %>
  <%= form_with model: @order, url: orders_comfirm_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
    <dvi>
    <p>支払い方法</p>
      <%= f.radio_button :payment_method,:credit_card %>
      <%= f.label :クレジットカード %><br>
      <%= f.radio_button :payment_method,:transfer %>
      <%= f.label :銀行振込 %>
    </dvi>
    <dvi>
      <p>お届け先</p>
      <div>
        <%= f.radio_button :address_option, 0 %>
        <%= f.label :ご自身の住所 %><br>
        〒<%= current_customer.postal_code %>
          <%= current_customer.address %><br>
          <%= current_customer.last_name %><%= current_customer.first_name %>
      </div>
      <div>
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :登録済住所から選択 %><br>
        <%= f.collection_select :customer_id, @addresses, :id, :full_address, :include_blank => "選択してください" %>
      </div>
      <div>
        <%= f.radio_button :address_option, 2 %>
        <%= f.label :新しいお届け先 %><br>
        <%= f.label :"郵便番号 (ハイフンなし)" %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :住所 %>
        <%= f.text_field :address %><br>
        <%= f.label :宛名 %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.submit "確認画面へ進む", class:"btn btn-success" %>
      </div>
    </dvi>
  <% end %>
</dvi>
