<div>
  <h2>注文履歴詳細</h2>
  <div>
    <h5>注文情報</h5>
    <table border="1">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>
    <h5>請求金額</h5>
    <table border="1">
      <tr>
        <th>商品合計</th>
        <!--@order.total_payment -  @order.postage_cost-->
        <td><%= @order.total_payment -  @order.postage_cost %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment %></td>
      </tr>
    </table>
    <h5>注文内容</h5>
    <table border="1">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% subtotal =0 %>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <!--何処のテーブルに保存しているかを知る-->
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.item.with_tax_price * order_detail.amount) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>