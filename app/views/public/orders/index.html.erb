<div class="container">
  <h2>注文履歴一覧</h2>
  <div>
    <table border="1" class="my-3">
      <thead>
        <tr>
          <th width=6%>注文日</th>
          <th width=16%>配送先</th>
          <th width=10%>注文商品</th>
          <th width=6%>支払金額</th>
          <th width=10%>ステータス</th>
          <th width=8%>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <%  @orders.each do |order| %>
        <tr>
          <!--created_atの後ろにstrftime('%/Y/%/m/%/d')で西暦と日付-->
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.address %></td>
          <td>
            <!--何処からデータを持って来るか考えて書くこと-->
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td><%=order.status %></td>
          <td class="text-center"><%= link_to "表示する",order_path(order), class: "btn btn-primary" %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>