<div>
  <h2>配送先登録/一覧</h2>
    <% if @address.errors.any? %>
    <%= @address.errors.count %>件のエラーが発生しました
    <% @address.errors.full_messages.each do |message| %><br>
      <%= message %><br>
    <% end %>
  <% end %>
  <div>
    <%= form_with model: @address, url: addresses_path, local: true do |f| %>
    <!--customerのidを送る-->
    <%= f.hidden_field :customer_id, value: @customer.id %>
      <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>
      <div class="field">
        <%= f.label :宛名 %>
        <%= f.text_field :name %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
  <table border="1">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td colspan="2">
          <%= link_to "編集する", edit_address_path(address) %>
          <%= link_to "削除する",  address_path(address), method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>