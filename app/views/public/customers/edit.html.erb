<div>
  <h2>会員情報編集</h2>
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <% @customer.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  <% end %>
  <div>
    <%= form_with model: @customer, url: customers_path, local: true do |f| %>
    <div class="field">
      <%= f.label :氏名 %>
      <%= f.text_field :last_name %><%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
    </div>
    <div class="field">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :電話番号%>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>
    </div>
    <div class="actions">
      <%= f.submit "編集内容を保存する" %>
    </div>
    <% end %>
  </div>
</div>