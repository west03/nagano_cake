<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'homes/genre', genres: @genres %>
    </div>
    <div class="col-10">
      <h2 class="pb-3">商品一覧(全<%= @item.count %>件)</h2>
        <div class="row">
          <% @items.each do |item| %>
          <div class="col-3 p-1">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image , :fill, 170,170 %>
              <p><%= item.name %></p>
            <% end %>
            <p>¥<%= item.price %></p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="mx-auto" style="width: 200px;">
   <p><%= paginate @items %></p>
  </div>
</div>