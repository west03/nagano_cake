<div>
  <div>
    <%= render 'homes/genre', genres: @genres %>
  </div>
  <div>
    <h2>商品一覧(全<%= @item.count %>件)</h2>
    <% @items.each do |item| %>
    <div>
      <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image , :fill, 250,200 %>
      <p><%= item.name %></p>
      <% end %>
      <p>¥<%= item.price %></p>
    </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>