<div>
  <h2>ショッピングカート</h2>
  <%= link_to "カートを空にする", destroy_all_cart_items_path,  method: :delete %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 80,50 %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model: @cart_item, url: cart_item_path(cart_item.id),method: :patch, local: true do |f| %>
            <%= f.select :amount, *[1..99], {selected: cart_item.amount} %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <% @sum += cart_item.subtotal %>
        <td><%= link_to "削除する", cart_item_path(cart_item),method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to "買い物を続ける", items_path %>
<span>合計金額<%= @sum  %></span>
</div>