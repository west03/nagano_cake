<div class="container">
  <h2>注文履歴一覧</h2>
  <table class="table table-borderred">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d"), admin_order_path(order.id) %></td>
        <td><%= order.name %></td>
        <!--モデル.sum(合計したいカラム)=合計値-->
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>