<div>
  <h2>注文履歴</h2>
  <p>購入者<%= @order.name %></p>
  <p>注文日<%= @order.created_at.strftime("%Y/%m/%d") %></p>
  <p>配送先<%= @order.address %></p>
  <p>支払方法<%= @order.payment_method_i18n %></p>
  <p>
    注文ステータス
    <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch, local: true do |f| %>
    <%= f.hidden_field :customer_id %>
    <!--モデルのenumからstautsを引っ張ってきている-->
    <!--.keysがパラメータに送る情報を数値にしてくれる-->
      <%= f.select :status, Order.statuses.keys %>
      <%= f.submit "更新" %>
    <% end %>
  </p>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>
    <tbody>
     
    </tbody>
  </table>
</div>