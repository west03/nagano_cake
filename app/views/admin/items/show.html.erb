<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col-6 my-3">
      <%= attachment_image_tag @item, :image %>
    </div>
    <div class="col-6">
      <p class="mt-3">商品名<%= @item.name %></p>
      <p class="mt-3">商品説明<%= @item.introduction %></p>
      <p class="mt-3">ジャンル<%= @item.genre.name %></p>
      <p class="mt-3">税込価格（税抜価格）<%= @item.with_tax_price %>(<%= @item.price %>)</p>
      <P class="my-3">
        販売ステータス
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売中止
        <% end %>
      </P>
    </div>
  </div class="mb-3">
  <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success"  %>
</div>