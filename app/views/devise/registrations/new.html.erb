<div>
  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %>
      <span>(姓)<%= f.text_field :last_name, autofocus: true %></span>
      <span>(名)<%= f.text_field :first_name, autofocus: true %></span>
    </div>

    <div class="field">
      <%= f.label :フリガナ %>
      <span>(セイ)<%= f.text_field :last_name_kana, autofocus: true %></span>
      <span>(メイ)<%= f.text_field :first_name_kana, autofocus: true %></span>
    </div>


    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %>
      <span>(ハイフンなし)</span>
      <span><%= f.text_field :postal_code, autofocus: true %></span>
    </div>


    <div class="field">
      <%= f.label :住所 %>
      <span><%= f.text_field :address, autofocus: true %></span>
    </div>

    <div class="field">
      <%= f.label :電話番号 %>
      <span>(ハイフンなし)</span>
      <span><%= f.text_field :telephone_number, autofocus: true %></span>
    </div>


    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><span>(確認用)</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>


    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>