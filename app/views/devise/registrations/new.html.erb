<div class="container">
  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <%= f.label :名前 %>
      <span class="ml-3">(姓)<%= f.text_field :last_name, autofocus: true  %></span>
      <span class="ml-3">(名)<%= f.text_field :first_name, autofocus: true %></span>
    </div>

    <div class="field mt-3">
      <%= f.label :フリガナ %>
      <span class="ml-3">(セイ)<%= f.text_field :last_name_kana, autofocus: true %></span>
      <span class="ml-3">(メイ)<%= f.text_field :first_name_kana, autofocus: true %></span>
    </div>


    <div class="field mt-3">
      <%= f.label :メールアドレス %>
      <span class="ml-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
    </div>

    <div class="field mt-3">
      <%= f.label :郵便番号 %>
      <span>(ハイフンなし)</span>
      <span class="ml-3"><%= f.text_field :postal_code, autofocus: true %></span>
    </div>


    <div class="field mt-3">
      <%= f.label :住所 %>
      <span class="ml-3"><%= f.text_field :address, autofocus: true %></span>
    </div>

    <div class="field mt-3">
      <%= f.label :電話番号 %>
      <span>(ハイフンなし)</span>
      <span class="ml-3"><%= f.text_field :telephone_number, autofocus: true %></span>
    </div>


    <div class="field mt-3">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <span class="ml-3"><%= f.password_field :password, autocomplete: "new-password" %></span>
    </div>

    <div class="field mt-3">
      <%= f.label :パスワード %><span>(確認用)</span>
      <span class="ml-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></span>
    </div>


    <div class="actions my-3">
      <%= f.submit "新規登録", class: "btn-sm btn-success btn-lg center-block" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>